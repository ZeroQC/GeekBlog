            input.form-control(type="text", name="q", placeholder="search")
            span.input-group-btn
              button.btn.btn-default(type="submit") 搜索

nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
  .navbar-header
    button.navbar-toggle(type="button", data-toggle="collapse", data-target="#bs-example-navbar-collapse-1")
      span.sr-only Toggle navigation
      span.icon-bar
      span.icon-bar
      span.icon-bar
      span.icon-bar
      span.icon-bar
      span.icon-bar
    a.navbar-brand(href="/#")
      strong Geek博客
  .collapse.navbar-collapse(id="bs-example-navbar-collapse-1")
    ul.nav.navbar-nav
      li
        a(href="/#") 主页
      li
        a(href="/blog/show/paging/1") 博客
      li.dropdown
        a.dropdown-toggle(data-toggle="dropdown") 分类
          strong.caret
        ul.dropdown-menu
          li
            a(href="/blog/show/category/#panel-element-HTML") HTML
          li
            a(href="/blog/show/category/#panel-element-CSS") CSS
          li
            a(href="/blog/show/category/#panel-element-JavaScript") JavaScript
          li.divider
          li
            a(href="/blog/show/category/#panel-element-Java") Java
          li
            a(href="/blog/show/category/#panel-element-PHP") PHP
          li
            a(href="/blog/show/category/#panel-element-Nodejs") Nodejs

    if user
      ul.nav.navbar-nav.navbar-right
        if (user.grade > 10)
          li
            a(href="/user/list/info") 管理用户
          li
            a |
        li
          a(href="/user/info/" + user.username) 欢迎您 ， #{user.username}
            if (user.grade > 10)
              span &nbsp;&nbsp;&nbsp;(管理员)
        li
          a |
        li
          a(href="/logout") 登出
        li
          a &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    else
      ul.nav.navbar-nav.navbar-right
        li
          a(href="#", data-toggle="modal", data-target="#singUp") 注册
        li
          a |
        li
          a(href="#", data-toggle="modal", data-target="#singIn") 登录
        li
          a &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

.modal.fade(id="singIn", tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true")
  .modal-dialog
    .modal-content
      form.form-horizontal(method="POST", action="/user/signin")
        .modal-header
          button.close(type="button", data-dismiss="modal", aria-hidden="true") &times;
          h4.modal-title(id="myModalLabel") 登 录
        .modal-body
          .form-group
            label.col-sm-2.control-label 账号
            .col-sm-10
              input.form-control(type="text", id="signInUsername", name="user[username]", placeholder="username")
          .form-group
            label.col-sm-2.control-label 密码
            .col-sm-10
              input.form-control(type="password", id="SignInPassword", name="user[password]", placeholder="password")
        .modal-footer
          button.btn.btn-default(type="button", data-dismiss="modal") 关闭
          button.btn.btn-success(type="submit") 确认
.modal.fade(id="singUp", tabindex="-1", role="dialog", aria-labelledby="myModalLabel2", aria-hidden="true")
  .modal-dialog
    .modal-content
      form.form-horizontal(method="POST", action="/user/signup")
        .modal-header
          button.close(type="button", data-dismiss="modal", aria-hidden="true") &times;
          h4.modal-title(id="myModalLabel2") 注 册
        .modal-body
          .form-group
            label.col-sm-2.control-label(for="SignUpUsername") 账号
            .col-sm-10
              input.form-control(type="text", id="SignUpUsername", name="user[username]", placeholder="username")
          .form-group
            label.col-sm-2.control-label(for="SignUpPassword") 密码
            .col-sm-10
              input.form-control(type="password", id="SignUpPassword", name="user[password]", placeholder="password")
          .form-group
            label.col-sm-2.control-label(for="SignUpAddress") 地址
            .col-sm-10
              input.form-control(type="text", id="SignUpAddress", name="user[address]", placeholder="address")
          .form-group
            label.col-sm-2.control-label(for="SignUpEmail") 邮箱
            .col-sm-10
              input.form-control(type="text", id="SignUpEmail", name="user[email]", placeholder="email")
        .modal-footer
          button.btn.btn-default(type="button", data-dismiss="modal") 关闭
          button.btn.btn-success(type="submit") 提交
